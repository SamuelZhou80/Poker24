<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bar_background_gray"
    android:orientation="vertical" >

    <com.samuel.views.CommonTitleView
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.samuel.views.CommonTitleView>
    <!-- 贷款金额 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_smallest" >

        <TextView
            android:id="@+id/text_loan_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_content"
            android:layout_marginStart="@dimen/margin_content"
            android:text="贷款总金额:"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_content" />

        <EditText
            android:id="@+id/edit_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_small"
            android:background="@color/white"
            android:hint="@string/please_input"
            android:inputType="number"
            android:maxLength="8"
            android:minEms="4"
            android:textSize="@dimen/text_size_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=" 元"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_content" />


            <TextView
                android:id="@+id/text_seldate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_content_vertical"
                android:layout_marginStart="@dimen/margin_content_vertical"
                android:text="开始时间 "
                android:minEms="8"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_content" />
    </LinearLayout>
    <!-- 贷款年限 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_smallest" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_content"
            android:layout_marginStart="@dimen/margin_content"
            android:text="贷款年限:"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_content" />

        <EditText
            android:id="@+id/edit_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:background="@color/white"
            android:hint="@string/please_input"
            android:inputType="number"
            android:maxLength="2"
            android:minEms="2"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 年"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_content" />
        <!-- 年回报率 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:text="年利率:"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_content" />

        <EditText
            android:id="@+id/edit_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:background="@color/white"
            android:hint="@string/please_input"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:minEms="3"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" %"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/listview_line"
        android:layout_marginTop="@dimen/margin_small" />

    <!-- 简要计算结果 -->
    <TextView
        android:id="@+id/text_summary_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_content"
        android:visibility="gone" />
    <Button
        android:id="@+id/button_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size_height"
        android:background="@drawable/selector_green_corner_btn"
        android:layout_margin="@dimen/margin_content"
        android:text="@string/tv_view"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_content" />
</LinearLayout>